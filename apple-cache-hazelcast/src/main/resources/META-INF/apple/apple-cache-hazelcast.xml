<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:hz="http://www.hazelcast.com/schema/spring"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.hazelcast.com/schema/spring http://www.hazelcast.com/schema/spring/hazelcast-spring-3.1.xsd">

	<hz:hazelcast id="instance">
		<hz:config>
			<hz:group name="dev" password="password" />
			<hz:properties>
				<hz:property name="hazelcast.logging.type">log4j</hz:property>
			</hz:properties>
			<hz:network port="5701" port-auto-increment="true">
				<hz:join>
					<hz:multicast enabled="false" multicast-group="224.2.2.3" multicast-port="54327" />
					<hz:tcp-ip enabled="true">
						<hz:members>${hazelcast.config.network.join.tcp-ip.members}</hz:members>
					</hz:tcp-ip>
				</hz:join>
			</hz:network>
		</hz:config>
	</hz:hazelcast>

</beans>