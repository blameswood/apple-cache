<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:c="http://www.springframework.org/schema/c" xmlns:p="http://www.springframework.org/schema/p"
	xmlns:cache="http://www.springframework.org/schema/cache"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd
        http://www.springframework.org/schema/cache http://www.springframework.org/schema/cache/spring-cache.xsd"
	default-lazy-init="true">

	<context:property-placeholder location="classpath*:memcache.properties" ignore-unresolvable="true" />

	<!-- 开启缓存 -->
	<cache:annotation-driven cache-manager="cacheManager" proxy-target-class="true" />
	
	<!-- 配置memcached的缓存服务器 -->
	<import resource="apple-cache-memcache.xml"/>
		
	<bean id="cacheManager"
		class="com.appleframework.cache.memcache.spring.MemcachedCacheManager">
		<property name="memcachedClient" ref="memcachedClient" />
		<!-- 配置缓存时间 -->
		<property name="configMap">
			<map>
				<entry key="typeList" value="3600" />   <!-- key缓存对象名称 value缓存过期时间 -->
			</map>
		</property>
	</bean>


</beans>



